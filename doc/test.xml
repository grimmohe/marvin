	</assignment>
	<assignment id="3" end="a#=1">
		<!-- Das hier ist Dreck. Überarbeiten!1!! -->
		<event ifarg1="right:distance" ifcompare="l" ifarg2="60" then="engine:turn=stop" final="true"/>
